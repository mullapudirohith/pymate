{
  "compilerOptions": {
    "target": "ES2020",
    "types": [ "vscode", "node" ],
    "module": "commonjs",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}