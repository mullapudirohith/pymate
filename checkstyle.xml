<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <!-- We only use RegexpSingleline, which works on any text -->
  <module name="RegexpSingleline">
    <property name="format" value="^.{101,}$"/>
    <property name="message" value="Line exceeds 100 characters"/>
  </module>
  <module name="RegexpSingleline">
    <property name="format" value="^def\s+[A-Z]"/>
    <property name="message" value="Function names should be snake_case"/>
  </module>
</module>
